{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "expect": true,
    "require": true,
    "define": true,
    "module": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "it": true,
    "done": true,
    "_gaq": true,
    "jest": true,
    "pit": true,
    "xdescribe": true,
    "xit": true,
    "$": true,
    "process": true,
    "__dirname": true
  },
  "rules": {
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": [2, { "properties": "always" }],
    "comma-spacing": 2,
    "comma-style": 2,
    "complexity": [1, 6],
    "curly": 2,
    "default-case": 2,
    "dot-notation": 2,
    "eol-last": 2,
    "eqeqeq": 2,
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "guard-for-in": 2,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "jsx-quotes": 2,
    "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": 2,
    "new-cap": 2,
    "new-parens": 2,
    "no-alert": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-parens": 0,
    "no-floating-decimal": 2,
    "no-func-assign": 2,
    "no-implied-eval": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-nested-ternary": 2,
    "no-return-assign": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-unused-expressions": 2,
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "radix": 2,
    "semi": 2,
    "semi-spacing": [2, { "before": false, "after": true}],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-parens" : 2,
    "space-infix-ops": 2,
    "space-unary-ops": [2, { "words": true, "nonwords": false} ],
    "spaced-comment": [2, "always", { "exceptions": ["-"] }],
    "valid-jsdoc": 0,
    "wrap-iife": 2,
    "yoda": [2, "never"]
  }
}
